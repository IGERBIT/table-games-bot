{
	"compilerOptions": {    
		"target": "ES2020",                   
		"module": "commonjs",                 
		"outDir": "build",                   
		"strict": true,                      
		"moduleResolution": "node",           
		"baseUrl": ".",                      
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			],
			"@/*":["src/*"]
		},
		"esModuleInterop": true, 
		"experimentalDecorators": true,
		"skipLibCheck": true,                     
	},
	"include": ["src/**/*"],
	"exclude": [
        "node_modules"
    ]
}
